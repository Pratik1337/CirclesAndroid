<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tx_comment_maker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:text="Name"
                android:textColor="#494949"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/im_comment_photo"
                app:layout_constraintTop_toTopOf="@+id/im_comment_photo" />

            <TextView
                android:id="@+id/tx_comment_text"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="#F3353535"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/tx_comment_maker"
                app:layout_constraintTop_toTopOf="@+id/tx_comment_maker" />

            <ImageView
                android:id="@+id/im_comment_photo"
                android:layout_width="19dp"
                android:layout_height="24dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/usr1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>